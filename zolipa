-- Простая библиотека UI без зависимостей
local SimpleUiLib = {}

function SimpleUiLib:CreateWindow(title)
    local self = setmetatable({}, {__index = SimpleUiLib})
    self.title = title or "Simple UI"
    self.elements = {}
    
    -- Создаем основной экран
    self.screenGui = Instance.new("ScreenGui")
    self.screenGui.Name = "SimpleUiLib_"..tostring(math.random(1000,9999))
    self.screenGui.Parent = game:GetService("CoreGui")
    
    -- Основной фрейм
    self.mainFrame = Instance.new("Frame")
    self.mainFrame.Name = "MainFrame"
    self.mainFrame.Size = UDim2.new(0, 300, 0, 400)
    self.mainFrame.Position = UDim2.new(0.5, -150, 0.5, -200)
    self.mainFrame.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
    self.mainFrame.BorderSizePixel = 0
    self.mainFrame.Parent = self.screenGui
    
    -- Заголовок
    local titleLabel = Instance.new("TextLabel")
    titleLabel.Name = "Title"
    titleLabel.Text = self.title
    titleLabel.Size = UDim2.new(1, 0, 0, 30)
    titleLabel.Position = UDim2.new(0, 0, 0, 0)
    titleLabel.BackgroundColor3 = Color3.fromRGB(20, 20, 20)
    titleLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
    titleLabel.Font = Enum.Font.SourceSansBold
    titleLabel.TextSize = 18
    titleLabel.Parent = self.mainFrame
    
    -- Контейнер для элементов
    self.contentFrame = Instance.new("Frame")
    self.contentFrame.Name = "Content"
    self.contentFrame.Size = UDim2.new(1, -10, 1, -40)
    self.contentFrame.Position = UDim2.new(0, 5, 0, 35)
    self.contentFrame.BackgroundTransparency = 1
    self.contentFrame.Parent = self.mainFrame
    
    -- Список элементов
    self.listLayout = Instance.new("UIListLayout")
    self.listLayout.Padding = UDim.new(0, 5)
    self.listLayout.Parent = self.contentFrame
    
    return self
end

-- Элементы UI
function SimpleUiLib:Button(text, callback)
    local button = Instance.new("TextButton")
    button.Name = "Button_"..text
    button.Size = UDim2.new(1, 0, 0, 30)
    button.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
    button.TextColor3 = Color3.fromRGB(255, 255, 255)
    button.Text = text
    button.Font = Enum.Font.SourceSans
    button.TextSize = 14
    button.Parent = self.contentFrame
    
    button.MouseButton1Click:Connect(function()
        pcall(callback)
    end)
    
    table.insert(self.elements, button)
    return button
end

function SimpleUiLib:Toggle(text, default, callback)
    local toggle = Instance.new("TextButton")
    toggle.Name = "Toggle_"..text
    toggle.Size = UDim2.new(1, 0, 0, 30)
    toggle.BackgroundColor3 = default and Color3.fromRGB(0, 100, 0) or Color3.fromRGB(100, 0, 0)
    toggle.TextColor3 = Color3.fromRGB(255, 255, 255)
    toggle.Text = text..": "..(default and "ON" or "OFF")
    toggle.Font = Enum.Font.SourceSans
    toggle.TextSize = 14
    toggle.Parent = self.contentFrame
    
    local state = default or false
    
    toggle.MouseButton1Click:Connect(function()
        state = not state
        toggle.BackgroundColor3 = state and Color3.fromRGB(0, 100, 0) or Color3.fromRGB(100, 0, 0)
        toggle.Text = text..": "..(state and "ON" or "OFF")
        pcall(callback, state)
    end)
    
    table.insert(self.elements, toggle)
    return toggle
end

function SimpleUiLib:Label(text, color)
    local label = Instance.new("TextLabel")
    label.Name = "Label_"..text
    label.Size = UDim2.new(1, 0, 0, 20)
    label.BackgroundTransparency = 1
    label.TextColor3 = color or Color3.fromRGB(255, 255, 255)
    label.Text = text
    label.Font = Enum.Font.SourceSans
    label.TextSize = 14
    label.TextXAlignment = Enum.TextXAlignment.Left
    label.Parent = self.contentFrame
    
    table.insert(self.elements, label)
    return label
end

function SimpleUiLib:Destroy()
    self.screenGui:Destroy()
end

return SimpleUiLib
